generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id  Int @id @default(autoincrement())
  name String
  email String 
  password String
  link Link[]
}

model Link{
  linkId Int @id @default(autoincrement())
  originalUrl String
  shortUrl String
  encrypt Boolean @default(false)
  owner User @relation(fields: [linkId],references: [id])
  stats LinkStatistics?
}

model LinkStatistics{
  statId Int @id @unique @default(autoincrement())
  visits  DateTime[] 
  region String[]
  link Link @relation(fields: [statId],references: [linkId])
}