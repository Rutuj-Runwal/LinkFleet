{
  "compilerOptions": {
    "target": "ESNext",                                  /* Set the JavaScript language version for emitted 

    /* Modules */
    "module": "commonjs",           
    "esModuleInterop": true,    
    "forceConsistentCasingInFileNames": true,            /* Ensure that casing is correct in imports. */

    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir": "dist"                          
  }
}
